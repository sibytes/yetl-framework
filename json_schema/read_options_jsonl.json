{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/read_options_jsonl.schema.json",
  "title": "Delimited Text Dataset",
  "description": "An delimited text format described by a flat file format. CSV is a misnomer however it's consistent with spark",
  "type": "object",
  "properties": {
    "schema_versioning": {
      "type": "boolean"
    },
    "compression_type": {
      "type": "string",
      "enum": ["none"]
    },
    "column_delimiter": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1
    },
    "row_delimiter": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4
    },
    "skip_line_count": {
      "type": "integer",
      "minimum": 0
    },
    "column_names_ifr": {
      "type": "boolean"
    },
    "escape_character": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1
    },
    "quote_character": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1
    },
    "null_value": {
      "type": { "type": ["null", "string"] }
    },
    "empty_column_null": {
      "type": "boolean"
    },
    "encoding": {
      "type": "string",
      "enum": ["utf-8", "utf-16", "ascii"]
    },
    "timestamp_format": {
      "type": "string"
    },
    "date_format": {
      "type": "string"
    },
    "days_retention_period": {
      "type": "integer",
      "minimum": 0
    },
    "partition_path_format": {
      "type": "string"
    },
    "partition_file_format": {
      "type": "string"
    },
    "extension": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "dataset": {
      "type": "string"
    },
    "path": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "emum": ["permissive", "failfast", "dropmalformed"]
    },
    "columnNameOfCorruptRecord": {
      "type": "string"
    },
    "bad_records_path": {
      "type": "string"
    },
    "data_schema": {
      "type": "object",
      "properties": {
        "spark_schema_path": {
          "type": "string"
        },
        "spark_table_schema": {
          "type": "string"
        },
        "spark_column_schema": {
          "type": "string"
        },
        "json_table_schema": {
          "type": "string"
        },
        "json_column_schema": {
          "type": "string"
        }
      },
      "required": ["spark_schema_path", "spark_table_schema"]
    }
  },
  "required": [
    "schema_versioning",
    "compression_type",
    "column_delimiter",
    "row_delimiter",
    "skip_line_count",
    "column_names_ifr",
    "escape_character",
    "quote_character",
    "null_value",
    "empty_column_null",
    "encoding",
    "timestamp_format",
    "days_retention_period",
    "partition_path_format",
    "partition_file_format",
    "extension",
    "format",
    "dataset",
    "path",
    "mode",
    "dropmalformed",
    "bad_records_path",
    "data_schema"
  ]
}
